RewriteEngine on

#redirigeix index.php a l'arrel
	RewriteEngine On
	RewriteCond %{THE_REQUEST} ^[^/]*/index\.php [NC]
	RewriteRule . / [R=301,L]

	RewriteCond %{REQUEST_FILENAME} !-d
	#RewriteRule ^thumb/([^/\.]+)/([^/\.]+)/(.*)$ libs/phpthumb/thumb.php?w=$1&h=$2&src=$3 [L]
	RewriteRule ^thumb/(.*)$ libs/phpthumb/thumb.php?src=$1 [L]

	RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
	#RewriteRule ^([^/\.]+)/?$ index.php?seccio=$1 [L]
    RewriteRule ^(.*)$ index.php?seccio=$1 [QSA,L]

	

